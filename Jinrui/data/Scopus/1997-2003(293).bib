@ARTICLE{Mazurek1999247,
author={Mazurek, M.},
title={Dynamics of dissolved material transport in a post-glacial catchment (Kluda catchment, West Pomerania) [Dynamika transportu substancji rozpuszczonych w zlewni mlodoglacjalnej (zlewnia Kludy, Pomorze Zachodnie)]},
journal={Przeglad Geograficzny},
